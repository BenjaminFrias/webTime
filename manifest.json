{
  "manifest_version": 3, 
  "name": "WebTime tracker",
  "version": "1.0",
  "description": "A timer for tracking my time in certain websties",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["dist/content.js"] ,
      "css": ["src/content.css"],       
      "run_at": "document_start"
    }
  ],
  
  "action": {         
    "default_popup": "src/popup.html"
  }
}